services:
  esourcing.products:
    build:
      context: C:\Users\Rufat\Desktop\EAuctionWebApp
      dockerfile: ESourcing.Products/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: ESourcing.Products
      target: base
    container_name: esourcingproduct
    depends_on:
      mongo:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: http://+:8000
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
      ProductDatabaseSettings:ConnectionStrings: mongodb://localhost:27017
    image: esourcingproducts:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/net6.0/ESourcing.Products.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 8000
    tty: true
    volumes:
    - C:\Users\Rufat\Desktop\EAuctionWebApp\ESourcing.Products:/app:rw
    - C:\Users\Rufat\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Rufat\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Rufat\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Users\Rufat\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\Rufat\Desktop\EAuctionWebApp:/src:rw
  mongo:
    container_name: mongo
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /site:/data/db:rw
version: '3.4'